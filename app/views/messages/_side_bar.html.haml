.chat-side
  .side-header
    %h3.header__name
      = current_user.name
    .side-header__box
      %p.side-header__box__user-name
      %ul.side-header__box__menu
        %li.side-header__box__menu__btn
          = link_to new_group_path do
            = icon'fas fa-edit',class: 'btn'
        %li.side-header__box__menu__btn2
          = link_to edit_user_path(current_user) do
            =icon'fas fa-cog',class: 'btn2'
  .groups
    - current_user.groups.each do |group|
      .a
        .group
          = link_to group_messages_path(group) do
            .group__name
              = group.name
            .group__message
